<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff"
    tools:context=".PopUpHorariosNotif">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Horarios para notificaciones"
        android:textColor="#000000"/>

    <RadioButton
        android:id="@+id/radioButtonAnytime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="En cualquier momento" />

    <RadioButton
        android:id="@+id/radioButtonNunca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nunca" />

    <RadioButton
        android:id="@+id/radioButtonWiFi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sólo con conexión WiFi" />


</LinearLayout>